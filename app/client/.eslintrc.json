{
    "env": {
        "es2021": true,
        "node": true
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "extends": [
        "../../.eslintrc.json",
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
      ],
    "rules": {
      "class-methods-use-this": "warn",
      "no-param-reassign": "off",
      "prefer-destructuring": "warn",
      "max-len": "off",
      "no-plusplus": "off",
      "camelcase": "off",
      "eqeqeq": "off",
      "no-console": "off",
      "import/no-mutable-exports": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "import/extensions": [
        "error",
          "ignorePackages",
          {
            "ts": "never",
            "tsx": "never"
          }
      ]
    }
}
